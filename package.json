{
  "name": "DetoxAndroid",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "e2e:android:debug": "detox test -c android.emu.debug",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest"
  },
  "dependencies": {
    "react": "16.2.0",
    "react-native": "0.53.3"
  },
  "devDependencies": {
    "babel-jest": "^22.4.0",
    "babel-preset-react-native": "^4.0.0",
    "detox": "^7.0.1",
    "jest": "^22.1.4",
    "mocha": "^5.0.0",
    "react-test-renderer": "16.2.0"
  },
  "jest": {
    "preset": "react-native",
    "testMatch": [
        "<rootDir>/src/**/__tests__/**/*.spec.js?(x)"
    ],
    "collectCoverageFrom": [
        "src/**/*.{js,jsx}"
    ],
    "coveragePathIgnorePatterns": [
        "/node_modules/",
        "/__tests__/"
    ],
    "setupFiles": [
        "raf/polyfill",
        "<rootDir>/unit/setup.js"
    ],
    "transformIgnorePatterns": [
        "/node_modules/(?!(react-native(.*)?/|native-base(.*)?/|react-navigation/))"
    ],
    "coverageReporters": [
        "json",
        "lcov",
        "text-summary"
    ]
  },
  "detox": {
    "configurations": {
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "name": "Nexus_5X_API_27"
      }
    }
  }
}
